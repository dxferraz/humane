datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
}

enum Role {
    USER
    ADMIN
}

model User {
    id         Int       @id @default(autoincrement())
    createdAt  DateTime  @default(now())
    email      String    @unique
    name       String
    birthdate  DateTime
    role       Role      @default(USER)
    verified   Boolean?
    verifiedAt DateTime?
    password   String?
}
